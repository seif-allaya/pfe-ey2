<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
    <div class="title_left">
        <h3>User Information</h3>
    </div>
</div>
    <div class="x_panel">
      <div class="x_title">
          <h2>General Information</h2>
          <div class="clearfix"></div>
      </div>

    <div class="x_content">
  <form action="/admin/add_user" class="form-horizontal form-label-left input_mask" method="post">
    <div class="">
    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">

      <input required name="username" class="form-control has-feedback-left" id="inputSuccess2" placeholder="Username" type="text" value="<%= @user.username%>"></input>
      <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
    </div>

    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
      <input required type="password" class="form-control" id="inputSuccess3" placeholder="Password" name="password" value="<%=@user.password%>">
      <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
    </div>
    <div>

    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="effort">Authorization Type</label>
      <div class="col-md-9 col-sm-9 col-xs-12">
        <% if @user %>
          <select class="form-control" name="auth_type">
            <% if @user.auth_type == "AD" %>
              <option selected="selected">AD</option>
            <% else %>
              <option>AD</option>
            <% end %>
            <% if @user.auth_type == "Local" %>
              <option selected="selected">Local</option>
            <% else %>
              <option>Local</option>
            <% end %>
          </select>
        <% else %>
          <select class="form-control" name="auth_type">
            <option selected="selected">AD</option>
            <option>Local</option>
          </select>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="effort">User Level</label>
      <div class="col-md-9 col-sm-9 col-xs-12">
        <% if @user %>
          <select class="form-control" name="type">
            <% if @user.type == "Administrator" %>
              <option selected="selected">Administrator</option>
            <% else %>
              <option>Administrator</option>
            <% end %>
            <% if @user.type == "User" %>
              <option selected="selected">User</option>
            <% else %>
              <option>User</option>
            <% end %>
          </select>
        <% else %>
          <select class="form-control" name="type">
            <option selected="selected">User</option>
            <option>Administrator</option>
          </select>
        <% end %>
      </div>
    </div>
    <input type="submit" value="Save" class="btn btn-success"></input>

    <button class="btn btn-primary" href="/admin/list_user" formnovalidate>Cancel</button>
  </form>
</div>

</div>
</div>
</div>
