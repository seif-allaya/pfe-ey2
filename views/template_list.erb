<!-- page content -->
      <div class="right_col" role="main">

        <div class="">
          <div class="page-title">
            <div class="title_left">
              <h3>Report Templates</h3>
            </div>

          </div>
          <div class="clearfix"></div>

          <div class="row">
            <div class="col-md-12">
              <div class="x_panel">
                <div class="x_title">

                  <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                  </ul>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">


                  <!-- start project list -->
                    <%if @templates%>
                  <table class="table table-striped projects">

                    <thead>
                      <tr>
                        <th style="width: 1%"></th>
                        <th style="width: 30%">Report Type</th>
                        <th style="width: 20%">Description</th>
                        <th style="width: 20%">Template Type</th>

                        <th style="width: 30%">Edit</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% @templates.each do |template| %>
                      <tr>
                        <td></td>
                        <td>
                          <a><%= template.report_type %></a>
                          <br />
                          <small>Created 01.01.2015</small>
                        </td>
                        <td>
                          <%= template.description %>
                        </td>
                        <td>
                          <%if template.finding_template%>
                            Finding Template
                          <%elsif template.status_template%>
                            Status Template
                          <%else%>
                            Report Template
                          <%end%>
                        </td>

                        <td>
                          <a href="/admin/templates/<%=template.id%>/download" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                          <a href="/admin/templates/<%=template.id%>/edit" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                          <a href="/admin/delete/templates/<%=template.id%>" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                        </td>

                      </tr>
                      <% end %>
                    </tbody>
                  </table>
                  <!-- end project list -->
                  <%end%>
                </div>
              </div>
            </div>
          </div>
        </div>



      </div>
      <!-- /page content -->
